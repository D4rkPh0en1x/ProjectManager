<header>
<h1>Project Manager</h1>

<nav class="navbar navbar-expand-sm navbar-light bg-light bg-faded" data-toggle="sticky-onscroll">
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
<span class="navbar-toggler-icon"></span>
</button>

<!-- Brand -->
<a class="navbar-brand" href="#"><img alt="" src="/images/logo-only.png" height="40px"></a>

    <div class="collapse navbar-collapse justify-content-center" id="nav-content">
    	<ul class="navbar-nav nav" id="myNav" >
      		<li class="nav-item">
        		<a class="nav-link active" id="home-tab" href="{{ path ('homepage') }}" role="tab">{{ 'HEADER.HOME'|trans }}</a>
      		</li>
      		<li class="nav-item">
        		<a class="nav-link" id="description-tab" href="{{ path ('homepage') }}" role="tab">{{ 'HEADER.DESCRIPTION'|trans }}</a>
      		</li>
      		<li class="nav-item">
        		<a class="nav-link" id="contact-tab" href="{{ path ('homepage') }}" role="tab">{{ 'HEADER.CONTACT'|trans }}</a>
      		</li>
      		<li class="nav-item dropdown">
        		<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="/" role="button">{{ 'HEADER.PROJECT'|trans }}</a>
        			<div class="dropdown-menu">
                      <a class="dropdown-item" href="{{ path ('list_product') }}">{{ 'HEADER.LISTPROJECT'|trans }}</a>
                      {% if is_granted('ROLE_ACTIVE') %}
                      		<a class="dropdown-item" href="{{ path ('add_product') }}">{{ 'HEADER.CREATEPROJECT'|trans }}</a>
    				  {% endif %}
        			</div>
      		</li>
      		<li class="nav-item dropdown">
        		<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="/" role="button">{{ 'HEADER.TRANSLATIONLIST'|trans }}</a>
        			<div class="dropdown-menu">
                      <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), {'_locale': 'en'}) }}">{{ 'HEADER.TRANSLATIONEN'|trans }}</a>
                      <a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), {'_locale': 'fr'}) }}">{{ 'HEADER.TRANSLATIONFR'|trans }}</a>
    
        			</div>
      		</li>
      		<li class="nav-item dropdown">
        		<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="/" role="button">{{ 'HEADER.USER'|trans }}</a>
        			<div class="dropdown-menu">
        				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
        					<a class="dropdown-item" href="{{ path ('logout') }}">{{ 'HEADER.LOGOUT'|trans }}</a>
        				{% else %}
                            <a class="dropdown-item" href="{{ path ('login') }}">{{ 'HEADER.LOGIN'|trans }}</a>
                            <a class="dropdown-item" href="{{ path ('register_user') }}">{{ 'HEADER.REGISTER'|trans }}</a>
                        {% endif %}
        			</div>
      		</li>
    
    	</ul>
	</div>
</nav>

</header>

{% set infoMessages = app.flashes('info') %}

{% if infoMessages is not empty %}
<div class="container">
	{% for message in infoMessages %}
		<p class="bg-success">{{ message }}</p>
	{% endfor %}
</div>
{% endif %}